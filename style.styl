html, body
	padding 0
	margin 0
header
	background #fff;
	box-shadow 0px -6px 5px 5px rgba(0, 0, 0, 0.6);
	z-index 2
	position relative
	overflow hidden
	height 25px
	padding 2px 25px
	.fork
		position absolute
		right 25px
		top 0
		display block
		height 25px
		padding 1px 2px
		line-height 25px
		font-size 16px
		text-decoration none
		color rgb(0, 51, 119)
		border-top 1px solid hsl(0, 100%, 60%)
		&:hover
			border-top-width 2px
			padding-top 0px
	.rollover
		display none
#create
	display none
canvas
	display block
